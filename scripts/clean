#!/usr/bin/env node

/**
 * NPX-compatible cleanup script for Next.js template
 * Usage: npx clean-nextjs-template
 */

const { execSync } = require('child_process');
const path = require('path');

try {
  const scriptPath = path.join(__dirname, 'clean.sh');
  execSync(`bash "${scriptPath}"`, {
    stdio: 'inherit',
    cwd: process.cwd(),
  });
} catch (error) {
  console.error('‚ùå Error running cleanup script:', error.message);
  process.exit(1);
}
