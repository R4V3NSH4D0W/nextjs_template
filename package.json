{
  "name": "nextjs-production-template",
  "version": "1.0.0",
  "description": "A comprehensive, production-ready Next.js template with automated changelog generation, modern tooling, and exceptional developer experience",
  "keywords": [
    "nextjs",
    "react",
    "typescript",
    "tailwindcss",
    "template",
    "boilerplate",
    "automation",
    "changelog"
  ],
  "author": "R4V3NSH4D0W",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/R4V3NSH4D0W/nextjs_template.git"
  },
  "bugs": {
    "url": "https://github.com/R4V3NSH4D0W/nextjs_template/issues"
  },
  "homepage": "https://github.com/R4V3NSH4D0W/nextjs_template#readme",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "clean": "tsx scripts/clean.ts",
    "daily-report": "tsx scripts/daily-changelog.ts",
    "test-runner": "tsx scripts/test-runner.ts",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest",
    "test:unit:watch": "vitest --watch",
    "test:unit:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:cypress": "cypress open",
    "test:cypress:run": "cypress run",
    "test:cypress:headless": "cypress run --headless",
    "test:api": "newman run tests/api/postman-collection.json",
    "test:visual": "playwright test --grep='visual'",
    "test:accessibility": "playwright test --grep='a11y'"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "next": "15.3.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.19.1",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.1",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5",
    "zod": "^3.25.67",
    "@playwright/test": "^1.49.1",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "^2.1.8",
    "axe-core": "^4.10.2",
    "cypress": "^13.17.0",
    "cypress-axe": "^1.6.0",
    "jsdom": "^25.0.1",
    "newman": "^6.2.1",
    "playwright-axe": "^2.0.3",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  }
}
