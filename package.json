{
  "name": "nextjs-production-template",
  "version": "1.0.0",
  "description": "A comprehensive, production-ready Next.js template with automated changelog generation, modern tooling, and exceptional developer experience",
  "keywords": [
    "nextjs",
    "react",
    "typescript",
    "tailwindcss",
    "template",
    "boilerplate",
    "automation",
    "changelog"
  ],
  "author": "R4V3NSH4D0W",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/R4V3NSH4D0W/nextjs_template.git"
  },
  "bugs": {
    "url": "https://github.com/R4V3NSH4D0W/nextjs_template/issues"
  },
  "homepage": "https://github.com/R4V3NSH4D0W/nextjs_template#readme",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "clean": "./scripts/clean.sh",
    "clean:windows": "powershell -ExecutionPolicy Bypass -File ./scripts/clean.ps1",
    "daily-report": "./scripts/daily-changelog.sh",
    "daily-report:windows": "powershell -ExecutionPolicy Bypass -File ./scripts/daily-changelog.ps1"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "next": "15.3.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.19.1",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "zod": "^3.25.67"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  }
}
